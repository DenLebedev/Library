@model IEnumerable<Library.WebApp.Models.ViewModels.IndexBookViewModel>

@{
    ViewBag.Title = "Index";
}

<h3>Books</h3>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IndexName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(@Html.DisplayFor(modelItem => item.IndexName).ToString(), "Details", new { id = item.Id })
        </td>
    </tr>
    }

</table>
